<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
    	    <gradient
			    android:startColor="#36a200"
			    android:endColor="#266706"
			    android:angle="90"
			    android:type="linear"/>
            <corners
                android:radius="3dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>      
    	    <solid
      	        android:color="#FF46B630" />
            <corners
                android:radius="9dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

    <item>        
        <shape>
    	    <gradient
			    android:startColor="#36a200"
			    android:endColor="#266706"
			    android:angle="-90"
			    android:type="linear"/>
    	    
            <corners
                android:radius="6dp" />
            <!--<stroke android:width="1dp" 
                android:color="#70ca44" />-->
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>
