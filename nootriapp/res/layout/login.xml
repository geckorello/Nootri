<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="#d1f0ff">
<RelativeLayout android:id="@+id/login_layout"
		xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
		android:layout_centerHorizontal="true"
		android:paddingBottom="10dip">
	
		<ImageView android:id="@+id/login_logo"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dip"
			android:layout_marginBottom="20dip"
			android:layout_centerHorizontal="true"
			android:src="@drawable/title_logo"/>
			
		<TextView android:id="@+id/login_username_title"
			android:layout_width="wrap_content"
			android:layout_below="@id/login_logo"
			android:layout_height="wrap_content"
			android:layout_marginLeft="10dip"
			android:textSize="17dip"
			android:textColor="#2b3134"
			android:text="@string/login_username_title_text"/>
			
		<EditText
	        android:id="@+id/login_username_textbox"
	        android:layout_width="fill_parent"
	    	android:layout_marginLeft="10dip"
	    	android:layout_marginRight="10dip"
	        android:textSize="22dip"
	        android:layout_height="wrap_content"
			android:layout_below="@id/login_username_title" 
	        android:layout_marginBottom="12dip"
	        android:background="@android:drawable/editbox_background"
	        android:singleLine="true"/>
	        
	    
	    <TextView android:id="@+id/login_password_title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@id/login_username_textbox" 
			android:layout_marginLeft="10dip"
			android:textSize="17dip"
			android:textColor="#2b3134"
			android:text="@string/login_password_title_text"/>
			    
		<EditText
	        android:id="@+id/login_password_textbox"
	        android:layout_width="fill_parent"
	        android:layout_alignLeft="@id/login_username_textbox"
	        android:layout_alignRight="@id/login_username_textbox"
	        android:textSize="22dip"
	        android:layout_height="wrap_content"
			android:layout_below="@id/login_password_title" 
	        android:layout_marginBottom="12dip"
	        android:background="@android:drawable/editbox_background"
	        android:singleLine="true"
	        android:password="true"
	        android:text=""/>
	        
        <Button
	        android:id="@+id/login_button_sign"
	        android:textColor="#FFFFFFFF"
	        android:background="@drawable/button_green"
	        android:textSize="18dip"
	        android:layout_width="180dip"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="12dip"
	        android:layout_below="@id/login_password_textbox"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip" />
		
		<Button
	        android:id="@+id/login_button_create"
	        android:textColor="#FFFFFFFF"
	        android:background="@drawable/button_green"
	        android:textSize="18dip"
	        android:layout_width="180dip"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/login_button_sign"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="10dip" />
	        
	        <!--  TODO: http://stackoverflow.com/questions/1521640/standard-android-button-with-a-different-color -->

	 </RelativeLayout> 
</ScrollView>