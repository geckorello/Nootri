<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:gravity="center_vertical"
    android:background="#d1f0ff">
<RelativeLayout android:id="@+id/Signup_Layout"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:layout_centerHorizontal="true"
  	android:paddingBottom="10dip"
  	 >
    
    <TextView android:id="@+id/signup_username_title"
    	android:text="@string/login_username_title_text" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_below="@+id/signup_name_textbox"
    	android:layout_marginLeft="10dip"
		android:textSize="17dip"
		android:textColor="#2b3134" />
    
    <EditText android:id="@+id/signup_username_textbox"
    	android:inputType="textEmailAddress"
    	android:layout_below="@+id/signup_username_title"
    	android:layout_height="wrap_content" 
    	android:layout_width="fill_parent" 
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginBottom="12dip"
    	android:background="@android:drawable/editbox_background"
	    android:singleLine="true"
	    android:textSize="22dip" />
    
    <TextView android:text="@string/signup_password1_title_text" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/signup_password1_title" 
    	android:layout_below="@+id/signup_username_textbox" 
    	android:layout_marginLeft="10dip"
		android:textSize="17dip"
		android:textColor="#2b3134" />
		
    <EditText android:inputType="textPassword" 
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content" 
    	android:id="@+id/signup_password1_textbox" 
    	android:layout_below="@+id/signup_password1_title"  
    	android:textSize="22dip"
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginBottom="12dip"
    	android:background="@android:drawable/editbox_background"
	    android:singleLine="true"/>
    
    <TextView android:id="@+id/signup_password2_title"
    	android:text="@string/signup_password2_title_text" 
    	android:layout_below="@+id/signup_password1_textbox"
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="10dip"
		android:textSize="17dip"
		android:textColor="#2b3134"  />
    
    <EditText android:id="@+id/signup_password2_textbox"
    	android:inputType="textPassword" 
    	android:layout_below="@+id/signup_password2_title"
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content" 
    	android:layout_marginLeft="10dip"
    	android:layout_marginRight="10dip"
    	android:layout_marginBottom="12dip"
    	android:background="@android:drawable/editbox_background" 
    	android:singleLine="true" 
    	android:textSize="22dip" />
    <Button
    	android:id="@+id/signup_button_submit"
        android:textColor="#FFFFFFFF"
        android:textSize="18dip"
        android:text="@string/signup_button_submit"
        android:background="@drawable/button_green"
        android:layout_width="180dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/signup_password2_textbox"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip" />
   
</RelativeLayout>
</ScrollView>